@using McvOnlineTicariOtomasyon.Models.siniflar;
@model List<Departman>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">

    <tr>
        <th>ID</th>
        <th>Deparman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.DepartmanId
            </td>

            <td>
                @k.DepartmanAd
            </td>
            <td>
                <a href="/Departman/DepartmanSil/@k.DepartmanId" class="btn btn-danger"> Sil</a>
            </td>
            <td>
                <a href="/Departman/DepartmanGetir/@k.DepartmanId" class="btn btn-success"> Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanDetay/@k.DepartmanId" class="btn btn-success" style="background-color:mediumslateblue"> Departman Detay</a>
            </td>
        </tr>
    }
</table>
<a href="~/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>

