@using McvOnlineTicariOtomasyon.Models.siniflar
@model List<Mesajlar>

@foreach (var x in Model)
{
    <div class="timeline timeline-inverse">

        <!-- timeline time label -->

        <div class="time-label">

            <span class="bg-danger">

                @x.Tarih.ToShortDateString()

            </span>

        </div>

        <!-- /.timeline-label -->
        <!-- timeline item -->

        <div>

            <i class="fas fa-envelope bg-primary"></i>

            <div class="timeline-item">

                <span class="time"><i class="far fa-clock"></i> @x.Tarih.ToShortTimeString()</span>

                <h3 class="timeline-header"><a href="#">@x.Konu</a></h3>

                <div class="timeline-body">

                    @x.İçerik

                </div>

                

            </div>

        </div>

    </div>
}
