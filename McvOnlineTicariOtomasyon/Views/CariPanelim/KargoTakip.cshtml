@using McvOnlineTicariOtomasyon.Models.siniflar;
@model List<KargoDetay>

@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
@using (Html.BeginForm("KargoTakip", "CariPanelim", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası : @Html.TextBox("p")
        <input type="submit"
               value="Ara" />
    </p>
}

<table class="table table-bordered" style="margin-top:20px">

    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Kargo Takip Kodu</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personel</td>
            <td>@k.Alıcı</td>
            <td>@k.Tarih</td>
            <td>@k.TakipKodu</td>
            <td>
                <a href="/CariPanelim/CariKargoTakip/@k.TakipKodu" class="btn btn-danger"> Detaylar</a>
            </td>
        </tr>
    }
</table>



